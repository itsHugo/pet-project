<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head %>
        <title>Items</title>
</head>

<body>
    <!-- Header -->
    <header>
        <% include ../partials/header %>
    </header>

    <!-- Your Content -->
    <main>
        <div class="jumbotron text-center">
            <h1>HTV</h1>
            <p>Items</p>
        </div>


        <div class="container container-fluid">

            <div class="row">
                <% if (items && items.length > 0){ %>

                    <% for(var i=0; i < items.length; i++) { %>
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <img src="/uploads/<%= items[i].Image %>" class="img-thumbnail img-responsive" alt="Item image" />
                                <div class="caption">
                                    <h3><%= items[i].Title %></h3>
                                    <h4>$<%= items[i].Price %></h4>

                                    <h4><%=  new Date(items[i].DateAdded).toLocaleDateString("en-US") %></h4>
                                    <p>
                                        <a href="/items/<%= items[i]._id %>" class="btn btn-primary" role="button">See more</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% }else { %>
                    <div class="alert alert-warning">
                        <h3>There is no result to your search.</h3>
                        <h4>Hopefully, next time, you'll find what you're looking for.</h4>
                    </div>
                    <img src="/images/no-result.png"  alt="image depicting no search results available" class="img-responsive"/>
                <% } %>
            </div>
            <!-- Pagination -->
            <nav class="text-center"aria-label="Page navigation">
                <ul class="pagination pagination-lg text-center">
                    

                    <% if (pagination && pagination.pages && pagination.pages > 1) { %>
                        <li>
                            <a href="<%pagination.path%><%= slug %>?page=<%= pagination.prevpage %>&perPage=<%= pagination.perPage %>" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <% for(var i = 1; i <= pagination.pages; i++){ %>
                            <% if (i == pagination.page){ %>
                                <li><a href="#"><%= i %></a></li>
                            <% }else {%>
                                <li><a href="<%pagination.path%><%= slug %>?page=<%= i %>&perPage=<%= pagination.perPage %>"><%= i %></a></li>
                            <% } %>
                        <% } %>
                        <li>
                            <a href="<%pagination.path%><%= slug %>?page=<%= pagination.nextpage %>&perPage=<%= pagination.perPage %>" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>

                    <% } %>
                    
                    
                </ul>
            </nav>
            <!-- /Pagination -->
        </div>
    </main>

    <!-- Footer -->
    <div>
        <% include ../partials/footer %>
    </div>
</body>

</html>